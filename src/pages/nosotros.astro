---
import { changeLanguage } from "i18next";
import { t } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("es");

const { description } = Astro.props;
---

<Layout  title="Nosotros" description={description}>
    <section class="dark:bg-slate-800">
        <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:pt-40">
          <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
            <div class="relative h-64 overflow-hidden rounded-lg sm:h-80 lg:order-last lg:h-full">
              <img
                alt=""
                src="https://images.unsplash.com/photo-1556761175-b413da4baf72?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                class="absolute inset-0 h-full w-full object-cover"
              />
            </div>
      
            <div class="lg:py-24">
              <p class="mt-2 text-3xl font-bold tracking-tight text-orange-600 sm:text-4xl">Quienes Somos</p>
              <p class="mt-6 text-lg leading-8 dark:text-white text-gray-600">
               {t("about.parag.01")}
                  
              </p>
                <div class="mt-6 text-lg leading-8 dark:text-white text-gray-600">
                  {t("about.parag.02")}
                </div>
              <a
                href="#"
                class="mt-8 inline-block rounded bg-oran-600 px-12 py-3 text-sm font-medium text-white transition bg-orange-600 hover:bg-opacity-75 focus:outline-none "
              >
                {t("home.hero-button.02")}
              </a>
            </div>
          </div>
        </div>



        <div class="mx-auto max-w-screen-xl px-4 sm:px-6 sm:py-12 lg:px-8">
          <div class="mx-auto">
            
            <p class="mt-6 text-lg leading-8 dark:text-white text-gray-600 ">
              {t("about.parag.03")}
              </p>
             
          </div>
      
          
        </div>



      </section>
      <section>
        <div class="mx-auto max-w-screen-2xl px-4 py-8 sm:px-6 lg:px-8">
          
          <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
            <div class="grid grid-cols-2 gap-4 md:grid-cols-1 lg:grid-cols-2">
              <img
                alt=""
                src="https://images.unsplash.com/photo-1538688423619-a81d3f23454b?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                class="h-40 w-full object-cover sm:h-56 md:h-full rounded-xl"
              />
      
              <img
                alt=""
                src="https://images.unsplash.com/photo-1574073763042-9dbe6ae03853?q=80&w=1287&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                class="h-40 w-full object-cover sm:h-56 md:h-full rounded-xl"
              />
            </div>
            <div class="bg-gradient-to-r from-orange-400 via-orange-500 to-orange-600 p-8 md:p-12 lg:px-16 lg:py-24 rounded-xl">
              <div class="mx-auto max-w-xl text-center">
                <h2 class="text-2xl font-bold text-white md:text-3xl">
                 Mision
                </h2>
      
                <p class=" text-white/90 sm:mt-4 sm:block">
                  {t("about.mision")}
                </p>
      
                
              </div>
            </div>
      
            
          </div>
        </div>
      </section>

      
      <div class="mx-auto max-w-screen-xl px-4 sm:px-6 sm:py-12 lg:px-8">
        <div class="mx-auto">
          
          <p class="mt-6 text-lg leading-8 dark:text-white text-gray-600 ">
            {t("about.parag.04")}
            </p>
           
        </div>
    
        
      </div>

      <section>
        <div class="mx-auto max-w-screen-2xl px-4 py-8 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
            <div class="bg-gradient-to-l from-orange-400 via-orange-500 to-orange-600 p-8 md:p-12 lg:px-16 lg:py-24 rounded-xl">
              <div class="mx-auto max-w-xl text-center">
                <h2 class="text-2xl font-bold text-white md:text-3xl">
                 Vision
                </h2>
      
                <p class=" text-white/90 sm:mt-4 sm:block">
                  {t("about.vision")}
                </p>
      
               
              </div>
            </div>
      
            <div class="grid grid-cols-2 gap-4 md:grid-cols-1 lg:grid-cols-2">
              <img
                alt=""
                src="https://images.unsplash.com/photo-1557804506-669a67965ba0?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                class="h-40 w-full object-cover sm:h-56 md:h-full rounded-xl"
              />
      
              <img
                alt=""
                src="https://images.unsplash.com/photo-1577100078279-b3445eae827c?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                class="h-40 w-full object-cover sm:h-56 md:h-full rounded-xl"
              />
            </div>
          </div>
        </div>
      </section>
    
      <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 pb-32">
        <div class="mx-auto">
          
          <p class="mt-6 text-lg leading-8 dark:text-white text-gray-600 ">
            {t("about.parag.05")}
            </p>
           
        </div>
    
        
      </div>


</Layout>
---
import { localizePath } from "astro-i18next";
import { t } from "i18next";

const year = new Date();

const images = {
    imgOne: "https://images.pexels.com/photos/3183197/pexels-photo-3183197.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
}

import { Icon } from "astro-icon/components";


const navItems = {
  links: [
    { href: localizePath("/"), text: t("nav.home") },
    { href: localizePath("/nosotros"), text: t("nav.about") },
    { href: localizePath("/precios"), text: t("nav.pricing") },
    { href: localizePath("/contacto"), text: t("nav.contact") },
  ],
  dropmenu: [
    {
      text: t("nav.solutions"),
      dropdown: [
        { href: localizePath('/soluciones/diseno-desarrollo-web'), text: t("nav.solution.01") },
        { href: localizePath('/soluciones/identidad-corporativa'), text: t("nav.solution.02") },
        { href: localizePath('/soluciones/optimizacion-seo'), text: t("nav.solution.03") },
      ]
    },
  ]
};
const footerLinks = [
    {
        text: "Compañia",
        items: [
        { href: localizePath("/"), text: t("nav.home") },
    { href: localizePath("/nosotros"), text: t("nav.about") },
    { href: localizePath("/precios"), text: t("nav.pricing") },
    { href: localizePath("/contacto"), text: t("nav.contact") },
        ],
      },
      {
        text: "Recursos",
        items: [
          { text: "Portafolio", href: "/portafolio" },
          { text: "Soluciones", href: "/soluciones" },
          { text: "Explora", href: "/blog" },
        ],
      },
      {
        text: "Oferta",
        items: [
          { href: '/diseno-desarrollo-web', text: 'Diseño y Desarrollo Web' },
          { href: '/identidad-corporativa', text: 'Manual de Identidad Corporativa' },
          { href: '/optimizacion-seo', text: 'Optimización en Motores de Búsqueda' },
        ],
      },
      {
        text: "Legal",
        items: [
          { text: t("footer.policy"), href: "/politica-de-privacidad" },
          { text: t("footer.terms"), href: "/terminos-y-condiciones" },
          { text: "Cookies", href: "/cookies" },
        ],
      },
];
const legal = footerLinks[3];
const compania = footerLinks[0];


const dropdowns = navItems.dropmenu[0].dropdown;


---


<footer class="dark:bg-slate-800 lg:grid lg:grid-cols-5 ">
    <div class="relative block h-32 lg:col-span-2 lg:h-full">
      <img
        src={images.imgOne}
        alt=""
        class="absolute inset-0 h-full w-full object-cover rounded-tr-3xl"
      />
    </div>
  
    <div class="px-4 py-16 sm:px-6 lg:col-span-3 lg:px-8">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
        <div>
          <p>
            <span class="text-xs uppercase tracking-wide dark:text-white text-gray-500"> {t("home.hero-button.02")}</span>
  
            <a href="https://api.whatsapp.com/send/?phone=573002982949" target="_blank" class="block text-2xl font-medium dark:text-white text-gray-900 hover:text-orange-400 dark:hover:text-orange-400 sm:text-3xl">
              +57 300 298 2949
            </a>
            <br>
           <div class="flex gap-2 items-center">
            <svg class="w-6 h-6 text-gray-700 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m3.5 5.5 7.893 6.036a1 1 0 0 0 1.214 0L20.5 5.5M4 19h16a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Z"/>
            </svg>
             
              
              <span class="text-sm tracking-wide dark:text-white text-gray-500">
                info@sarpin.agency
              </span>
        
           </div>
          </p>
  
          <ul class="mt-8 space-y-1 text-sm text-gray-700 dark:text-white">
            <li>Cartagena de Indias</li>
            <li>Barranquilla</li>
          </ul>
  
          <ul class="mt-8 flex gap-6">
            <li>
              <a
                href="https://www.facebook.com/sarpin.agency"
                rel="noreferrer"
                target="_blank"
                class="text-gray-700 dark:text-white transition hover:text-orange-400 dark:hover:text-orange-400"
              >
              <Icon name="facebook" class="w-8 h-8" />
              </a>
            </li>
  
            <li>
              <a href="https://www.instagram.com/sarpin.agency"
                rel="noreferrer"
                target="_blank"
                class="text-gray-700  dark:text-white transition hover:text-orange-400 dark:hover:text-orange-400"
              >
                <span class="sr-only">Instagram</span>
  
                  <Icon name="instagram" class="w-8 h-8" />
              </a>
            </li>
          </ul>
        </div>
  
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <p class="font-medium dark:text-orange-500 text-gray-900">{t("nav.solutions")}</p>
  
            <ul class="mt-6 space-y-4 text-sm">
              {
               dropdowns.map((item) => (
               <li>
                  <a href={item.href} class="text-gray-700 dark:text-white transition hover:opacity-75"> {item.text}</a>
                </li>
               ))
              }
  
            </ul>
          </div>
  
          <div>
            <p class="font-medium dark:text-orange-500 text-gray-900">{t("footer.company")}</p>
  
            <ul class="mt-6 space-y-4 text-sm">
             
              {
                compania.items.map((item) => (
                <li>
                  <a href={item.href} class="text-gray-700 dark:text-white transition hover:opacity-75">{item.text} </a>
                </li>
                ))
              }
              
            </ul>
          </div>
        </div>
      </div>
  
      <div class="mt-12 border-t border-gray-100 pt-12">
        <div class="sm:flex sm:items-center sm:justify-between">
          <ul class="flex flex-wrap gap-4 text-xs">
        
                    {
                      legal.items.map((item) => (
                        <li>
                           <a href={item.href} class="text-orange-500 transition hover:opacity-75"> {item.text}</a>
                        </li>
                      ))
                    }
           
          </ul>
  
          <p class="mt-8 text-xs dark:text-white text-gray-500 sm:mt-0">
            Sarpin Devs © {year.getFullYear()}. {t("footer.rights")}
        </div>
      </div>
    </div>
  </footer>
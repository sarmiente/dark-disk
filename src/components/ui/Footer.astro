---
const year = new Date();

const images = {
    imgOne: "https://images.pexels.com/photos/3183197/pexels-photo-3183197.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
}

import { Icon } from "astro-icon/components";
import { footerLinks } from "../../config/nav-menu";
